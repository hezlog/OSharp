<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../build/public.props" />
  <Import Project="../../build/version.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
    <TargetFrameworks Condition=" '$(MSBuildVersion)' >= '17.0' ">$(TargetFrameworks);net6.0</TargetFrameworks>
    <PackageId>OSharp.NLog</PackageId>
    <Description>OSharp NLog组件，封装使用nlog组件来实现框架的日志输出功能</Description>
    <Summary>OSharp NLog组件</Summary>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NLog" Version="4.7.13" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OSharp\OSharp.csproj" />
  </ItemGroup>

</Project>
